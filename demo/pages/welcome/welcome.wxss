/* 小程序样式文件，相当于css文件，会被自动引入到wxml */

page{
    background-color: #13ADFC;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    margin-top: 150rpx;
}

.user-name {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx;
}

.moto-container{
    border: 1px solid #fff;
    border-radius: 10rpx;
    width: 200rpx;
    height: 70rpx;
    text-align: center;
    margin-top: 200rpx;
}

.moto {
    font-size: 25rpx;
    font-weight: bold;
    line-height: 70rpx;
    color: #fff;
}


