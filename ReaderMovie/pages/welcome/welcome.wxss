/* pages/welcome/welcome.wxss */

page{
    background-color: #13ADFC;
}

.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    margin-top: 150rpx;
}

.user-name{
    font-size: 32rpx;
    font-weight: bold;
    color: #fff;
    margin-top: 70rpx;
}

.moto-container{
    width: 200rpx;
    height: 70rpx;
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    text-align: center;
    margin-top: 300rpx;
}

.moto{
    font-size: 25rpx;
    line-height: 70rpx;
    color: #fff;
    font-weight: bold;
}
